{
    "$schema": "https://turbo.build/schema.json",
    "extends": [
        "//"
    ],
    "pipeline": {
        "build": {
            "dependsOn": [
                "@repo/ui#build:styles"
            ],
            "env": [
                "GRAPHQL_ENDPOINT",
                "ANALYZE"
            ]
        },
        "dev": {
            "cache": false,
            "dependsOn": [
                "admin-panel#generate:types"
            ],
            "env": [
                "GRAPHQL_ENDPOINT"
            ],
            "persistent": true
        }
    }
}