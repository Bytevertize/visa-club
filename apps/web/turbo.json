{
    "$schema": "https://turbo.build/schema.json",
    "extends": [
        "//"
    ],
    "tasks": {
        "build": {
            "dependsOn": [
                "@repo/ui#build:styles"
            ],
            "env": [
                "NEXT_PUBLIC_CMS_BASE_ENDPOINT",
                "PUBLIC_CMS_IMAGE_HOSTNAME",
                "NEXT_PUBLIC_LANG_COOKIE",
                "OWN_ENDPOINT",
                "CMS_BASE_ENDPOINT",
                "PAYLOAD_HOSTNAME",
                "CMS_GRAPHQL_ENDPOINT",
                "ANALYZE",
                "PAYLOAD_DRAFT_TOKEN",
                "CMS_GRAPHQL_ENDPOINT"
            ]
        },
        "dev": {
            "cache": false,
            "dependsOn": [
                "admin-panel#generate:types",
                "^build"
            ],
            "env": [
                "NEXT_PUBLIC_CMS_BASE_ENDPOINT",
                "PUBLIC_CMS_IMAGE_HOSTNAME",
                "NEXT_PUBLIC_LANG_COOKIE",
                "OWN_ENDPOINT",
                "CMS_BASE_ENDPOINT",
                "PAYLOAD_HOSTNAME",
                "CMS_GRAPHQL_ENDPOINT",
                "PAYLOAD_DRAFT_TOKEN",
                "CMS_GRAPHQL_ENDPOINT"
            ],
            "persistent": true
        },
        "start": {
            "cache": false,
            "dependsOn": [
                "build"
            ],
            "persistent": true
        },
        "start:static": {
            "cache": false,
            "dependsOn": [
                "build"
            ],
            "persistent": true
        }
    }
}